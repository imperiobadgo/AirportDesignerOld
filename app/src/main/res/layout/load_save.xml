<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.pukekogames.airportdesigner.Activities.LoadAndSaveActivity">

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveListView"
            android:padding="10dp"
            android:layout_above="@+id/button_Load" android:layout_alignParentStart="true"
            android:layout_below="@+id/currentSaveEditText"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LoadSaveScreen_LoadButtonText"
            android:id="@+id/button_Load"
            android:clickable="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LoadSaveScreen_SaveButtonText"
            android:id="@+id/button_Save"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/button_Load" android:layout_alignEnd="@+id/saveListView"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Save"
                android:id="@+id/currentSaveEditText"
                android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
